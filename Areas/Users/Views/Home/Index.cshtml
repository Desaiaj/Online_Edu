    // to open Side Penal
    function openSidePan() {
        $('#mySidenav').attr('class', 'penalresponsive sidenav');
        $('#btnManuLeft').hide();
        $('#filter').show();
        $('#Result').show();
    }
    // To Close Side Penal
    function closeSidePan() {
        $('#mySidenav').removeAttr('class', 'penalresponsive');
        $('#mySidenav').attr('class', 'sidenav');
        $('#btnManuLeft').show();
        $('#filter').hide();
        $('#Result').hide();
    }
</script>
