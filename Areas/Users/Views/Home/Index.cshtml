
@{
    ViewBag.Title = "Home";
    Layout = "~/Areas/Users/Views/Shared/_UserMasterPage.cshtml";
}

@{

    if (Request.QueryString["TID"] != null)
    {
        <script>
            $(document).ready(function () {
                var id = "@Request.QueryString["TID"]";
                $('#TutorialID').val(id);
            });
        </script>
    }

    if (Request.QueryString["Tutorial"] != null)
    {
        <script>
            $(document).ready(function () {
                var src = "/Uploads/@Request.QueryString["Tutorial"]";
                $('#Display').attr('src', src);
                $('#Settings').css("display", "block");
            });
        </script>
    }
    else
    {
        <script>
            $(document).ready(function () {
                $('#Tutorial').css("display", "none");
                $('#Settings').css("display", "none");
            });
        </script>
    }
}

